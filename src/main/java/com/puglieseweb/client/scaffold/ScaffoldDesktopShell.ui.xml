<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:s='urn:import:com.puglieseweb.client.scaffold.ui'>

	<ui:image field='gwtLogo' src="../style/images/gwtLogo.png" />
	<ui:image field='rooLogo' src="../style/images/rooLogo.png" />
	<ui:image field='background' src="../style/images/background.jpeg" />

	<ui:style>
		@def contentWidth 850px;
		.page {
			background-image: url("background.jpeg");
		}
		
		.disabled {
			color: gray;
		}
		
		.body {
			overflow: auto;
		}
		
		.banner {
			margin-top: 1.5em;
			height: 6em;
		}
		
		.title {
			color: white;
			position: absolute;
			color: black;
			margin: 5px 0;
			padding: 0;
		}
		
		.title h1 {
			margin: 0;
		}
		
		.title h1 a {
			text-decoration: none;
			color: #003A66;
			margin: 0;
			padding: 0;
		}
		
		.title h3 {
			margin: 0 10px 0 0;
			color: #666666;
			float: left;
		}
		
		.title div {
			margin: 0;
			text-align: right;
		}
		
		.title a {
			margin: 0 0 0 5px;
			float: left;
		}
		
		.error {
			position: absolute;
			left: 12%;
			right: 12%;
			text-align: center;
			background-color: red;
		}
		
		.login {
			position: absolute;
			left: 80%;
			right: 0%;
			text-align: center;
			color: black;
		}
		
		.users {
			position: absolute;
			right: 0;
		}
		
		.centered {
			width: contentWidth;
			margin-right: auto;
			margin-left: auto;
		}
		
		.content {
			position: relative;
			border: 1px solid #ddf;
			overflow-y: auto;
			overflow-x: hidden;
			-moz-border-radius-topleft: 10px;
			-webkit-border-top-left-radius: 10px;
			-moz-border-radius-topright: 10px;
			-webkit-border-top-right-radius: 10px;
			background-color: white;
			-moz-border-radius-bottomleft: 10px;
			-webkit-border-bottom-left-radius: 10px;
			-moz-border-radius-bottomright: 10px;
			-webkit-border-bottom-right-radius: 10px;
		}
		
		.entities {
			position: absolute;
			left: 0;
			top: 0;
			bottom: 0;
			width: 11em;
		}
		
		.entitiesList {
			border-right: 1px solid #ddf;
			height: 100%;
			outline: none;
		}
		
		.entitiesList>div>div {
			padding-left: 1em;
			padding-top: 5px;
			padding-bottom: 5px;
		}
		
		.entityDetails {
			margin-left: 11em;
		}
		
		@sprite .gwtLogo {
			gwt-image: 'gwtLogo';
			float: right;
		}
		
		@sprite .rooLogo {
			gwt-image: 'rooLogo';
			float: right;
		}
		
		.logos {
			color: #aaa;
			font-size: 0.8em;
			width: 160px;
			margin-left: auto;
			margin-right: auto;
			text-align: right;
		}
		
		.footer {
			color: #aaa;
			font-size: 0.8em;
			text-align: center;
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM' styleName='{style.page}'>
		<g:north size='8'>
			<g:HTMLPanel styleName='{style.centered}'>
				<div class='{style.banner}'>
					<div class='{style.error}' ui:field='error'></div>
					<span class='{style.logos}'>
					</span>
					<div class='{style.title}'>

						<h1>
							<a href='http://www.puglieseweb.com/'
								title="Emanuele Pugliese's Roo GWT application - Testing new
	Technologies...">Emanuele Pugliese's
								Website</a>
						</h1>
						<div>
							<h3>Roo GWT Application</h3>
							<a href='http://code.google.com/webtoolkit/' title='GWT Website'>
								<div class='{style.gwtLogo}'></div>
							</a>
							<a href='http://www.springsource.org/roo/' title='Spring Roo Website'>
								<div class='{style.rooLogo}'></div>
							</a>
						</div>
					</div>

					<s:LoginWidget styleName='{style.login}' ui:field="loginWidget" />
				</div>
			</g:HTMLPanel>
		</g:north>
		<g:south size='4'>
			<g:HTML>
				<div class='{style.footer}'>
					<p>
						Powered by Emanuele Pugliese.
						<br />
						Copyleft (â†„) 2011
						<a href="http://www.puglieseweb.com" title="Emanuele Pugliese's Website">Puglieseweb.com</a>
					</p>
				</div>
			</g:HTML>
		</g:south>
		<g:center>
			<g:FlowPanel styleName='{style.content} {style.centered}'>
				<g:SimplePanel styleName='{style.entities}'>
					<g:ValuePicker styleName="{style.entitiesList}"
						width='100%' pageSize='100' ui:field='placesBox' />
				</g:SimplePanel>
				<g:FlowPanel>
					<g:NotificationMole animationDuration='0'
						message='loading...' ui:field='mole'></g:NotificationMole>
					<g:SimplePanel styleName="{style.entityDetails}"
						ui:field='master'></g:SimplePanel>
				</g:FlowPanel>
				<g:SimplePanel styleName="{style.entityDetails}"
					ui:field='details'></g:SimplePanel>
			</g:FlowPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
